//常連
c07r0203_regular_check:
	_PLAYER_NAME	0

	_TALKMSG		msg_c07r0203_depart_02

	_BMPMENU_INIT		1,1,0,1,SCWK_ANSWER					//Bキャンセル有効
	_BMPMENU_MAKE_LIST	msg_depart_menu_02,0					//おすすめは？
	_BMPMENU_MAKE_LIST	msg_depart_menu_01,1					//なんでもない
	_BMPMENU_START

	_IFVAL_JUMP  SCWK_ANSWER,NE,0,ev_c07r0203_depart_03

	_GET_RND_NEXT SCWK_ANSWER,4
	_IFVAL_JUMP  SCWK_ANSWER,EQ,0,ev_c07r0203_depart_04
	_IFVAL_JUMP  SCWK_ANSWER,EQ,1,ev_c07r0203_depart_05
